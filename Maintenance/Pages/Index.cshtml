@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-4">

    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">Panel de Control</h1>
            <p class="text-muted">Bienvenido, aquí tienes el estado de tu flota.</p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Camiones totales</h5>
                    <p class="card-text fs-2">@Model.TotalTrucks</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Disponibles</h5>
                    <p class="card-text fs-2">@Model.AvailableTrucks</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Mantenimientos hoy</h5>
                    <p class="card-text fs-2">@Model.MaintenancesToday</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <a href="/Trucks" class="btn btn-outline-primary w-100 py-3 mb-3">
                <i class="bi-truck me-2"></i> Ver Camiones
            </a>
        </div>
        <div class="col-md-4">
            <a href="/createMaintenance" class="btn btn-outline-success w-100 py-3 mb-3">
                <i class="bi-tools me-2"></i> Registrar Mantención
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Maintenances" class="btn btn-outline-secondary w-100 py-3 mb-3">
                <i class="bi-clock-history me-2"></i> Historial de Mantenciones
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Últimos Mantenimientos</h4>
            <table class="table table-sm table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Camión</th>
                        <th>Fecha</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.RecentMaintenances)
                    {
                        <tr>
                            <td>@m.Id</td>
                            <td>@m.Truck.Brand @m.Truck.Model</td>
                            <td>@m.Date.ToString("dd/MM/yyyy")</td>
                            <td>@m.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Maintenances" class="link-primary">Ver todos</a>
        </div>
    </div>

</div>

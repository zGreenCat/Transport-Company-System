@page
@model Maintenance.Pages.MaintenancesModel
@{
}
<div class="card card-maintenance">
    <div class="card-header bg-primary text-center text-white">
        <h4 class="mb-0">Historial de Mantenimientos</h4>
    </div>
    <div class="card-body p-3">

        @if (Model.SuppRegisterList == null || !Model.SuppRegisterList.Any())
        {
            <div class="alert alert-info mb-0">
                No hay mantenimientos registrados.
            </div>
        }
        else
        {
            <div class="table-maintenance-container">
                <table class="table table-striped table-hover table-bordered table-maintenance mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Camión</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.SuppRegisterList)
                        {
                            <tr>
                                <td>@s.Id</td>
                                <td>@s.Truck.Brand @s.Truck.Model</td>
                                <td>@s.Date.ToString("dd/MM/yyyy")</td>
                                <td title="@s.Description">@s.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>
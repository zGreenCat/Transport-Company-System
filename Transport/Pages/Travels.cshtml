@page
@model Transport.Pages.TravelsModel
@{
    var estados = new[] { "Terminado", "Iniciado"};
}

<div class="card card-trips">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">Listado de Viajes</h4>
    </div>
    <div class="card-body p-3">
        @if (Model.Travels == null || !Model.Travels.Any())
        {
            <div class="alert alert-warning mb-0">
                No hay viajes registrados.
            </div>
        }
        else
        {
            <div class="table-trips-container">
                <table class="table table-striped table-hover table-bordered table-trips mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Camión</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Destino</th>
                            <th scope="col">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Travels)
                        {
                            <tr>
                                <td>@t.Id</td>
                                <td>@t.IdTruck</td>
                                <td>@t.Date.ToString("dd/MM/yyyy")</td>
                                <td>@t.Destination</td>
                                <td>
                                    <form method="post" asp-page-handler="UpdateStatus" class="d-inline-block">
                                        <input type="hidden" asp-for="TravelId" value="@t.Id" />
                                        <select asp-for="newStatus"
                                                class="form-select form-select-sm"
                                                onchange="this.form.submit()">
                                            @foreach (var e in estados)
                                            {
                                                <option value="@e" selected="@(e == t.Status ? "selected" : null)">
                                                    @e
                                                </option>
                                            }
                                        </select>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>